{
  "kind": "collectionType",
  "collectionName": "items",
  "info": {
    "singularName": "item",
    "pluralName": "items",
    "displayName": "Item",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "level": {
      "type": "integer"
    },
    "description": {
      "type": "string"
    },
    "goblins": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::goblin.goblin",
      "mappedBy": "items"
    },
    "params": {
      "displayName": "params",
      "type": "component",
      "repeatable": false,
      "component": "item-params.params"
    },
    "parents": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::item.item",
      "inversedBy": "children"
    },
    "children": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::item.item",
      "inversedBy": "parents"
    },
    "src": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "boss": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::boss.boss",
      "inversedBy": "items"
    },
    "craft": {
      "type": "enumeration",
      "enum": [
        "Великая кузница",
        "Ангельская кузница",
        "Демоническая кузница",
        "Вневременная кузня",
        "Котелок Попса"
      ]
    },
    "count": {
      "type": "json"
    },
    "rare": {
      "type": "boolean"
    },
    "max_count": {
      "type": "integer"
    },
    "source": {
      "type": "enumeration",
      "enum": [
        "Сейф Попса",
        "Портал в Пиратскую Бухту",
        "Портал в Шерстмуть",
        "Ангел",
        "Демон",
        "Драконье логово",
        "Призрак торговца",
        "Гном Фарин Трёхпалый",
        "Дроны Хазула (39 волна)",
        "Вождь Огров (59 волна)",
        "Мобы 21, 23, 37, 43 волн и боссы-демоны",
        "Демонические мини-боссы каждой волны",
        "Не демонические мини-боссы каждой волны",
        "Паладин (66 волна)",
        "Дух Ноулиона(драк. квест)"
      ]
    }
  }
}
